
# .ackrc

# lexically sort filenames
--sort-files

# case sensitive search only with mixed case
--smart-case

# ignore documentation.
--ignore-dir=docs

# ignore tag files
--type-set=tags:is:tags
--notags

# add types
--type-add=vim:ext:vimrc
--type-add=js:ext:json

# set new types
--type-set=css:ext:sass
--type-set=markdown:ext:md,mkd,markdown

# colors
--color-filename=cyan
--color-match=yellow
--color-lineno=white 
