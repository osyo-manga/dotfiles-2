"  -----------------------------------------------------
"  .vimrcdev
"  -----------------------------------------------------

" BASICS & BUNDLES ------------------------- {{{

    set nocompatible
    filetype off
    filetype plugin indent off

    set rtp+=$HOME/dropbox/dev/vim-om
    set rtp+=$HOME/dropbox/dev/vim-plum

    filetype plugin indent on
    syntax on

" }}}

" GENERAL OPTIONS -------------------------- {{{

    set hidden
    set autochdir
    set noswapfile
    set nobackup

" }}}

" STATUSLINE & TABLINE --------------------- {{{

    set laststatus=2

    set stl=
    set stl+=\ %w%r%m%h
    set stl+=\ #%{bufnr('%')}\ %f
    set stl+=%=
    set stl+=%{strlen(&ft)?tolower(&ft).'\ ~\ ':''}
    set stl+=%{winwidth(winnr())>80?(strlen(&fenc)?&fenc.':':'').&ff.'\ ~\ ':''}
    set stl+=%1l:%02v\ (%L)

" }}}

" PLUGINS ---------------------------------- {{{

    let g:om_ctags_bin = "/usr/local/bin/ctags"
    let g:om_shade_color = 'Comment'
    let g:om_shade_color_darkbg = 'Comment'
    let g:om_matches_color = 'WarningMsg'
    let g:om_matches_color_darkbg = 'Function'
    nnoremap <leader>_ :Om<CR>

" }}}
