#!/usr/bin/env bash

# .brew
# mostly from https://github.com/mathiasbynens/dotfiles/blob/master/.brew

brew update
brew upgrade

brew tap homebrew/science
brew tap homebrew/dupes

# Install GNU core utilities 
brew install coreutils
echo "Donâ€™t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils  

# Install more recent versions of some OS X tools
brew install homebrew/dupes/grep

# Install common formulae
brew install zsh
brew install python
brew install python3
brew install ruby
brew install go
brew install git
brew install ack
brew install z
brew install vim --devel
brew install macvim --devel
brew install tree
brew install tmux
brew install ctags
brew install cmake
brew install android-sdk

# Remove outdated versions from the cellar
brew cleanup
